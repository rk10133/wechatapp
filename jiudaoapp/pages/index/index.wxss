.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0 10rpx 0;
    border-top: 1px solid #f5f5f5;
    width: 100%;
}

.like-share-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-right: 20rpx;
}


.share-cmp {
    margin-left: 10rpx;
}

.share-cmp>button {
    line-height: 50rpx;
}

.share {
    width: 32rpx;
    height: 32rpx;
}

.flip-cmp {
    position: absolute;
    bottom: 80rpx;
}