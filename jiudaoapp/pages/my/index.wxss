/* pages/my/index.wxss */
page {
    background-color: #f5f5f5;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.bg-img {
    width: 750rpx;
    height: 570rpx;
}

.about {
    position: absolute;
    top: 440rpx;
    display: flex;
    justify-content: space-between;
    width: 550rpx;
    padding: 0 100rpx;
}

.about .us,
.about .like {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.us .img {
    width: 34rpx;
    height: 34rpx;
}

.about .txt {
    padding-top: 10rpx;
    font-size: 27rpx;
    color: #999;
}

.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar-position {
    position: absolute;
    top: 255rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.preview {
    margin-top: 30rpx;
    width: 690rpx;
    display: flex;
    padding: 0 30rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}

.preview .item {
    margin-bottom: 30rpx;
}