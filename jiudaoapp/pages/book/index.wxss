/* pages/book/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

}

.container .header {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    box-shadow: 0 0 3px #e3e3e3;
    z-index: 99;
}

.header .search {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 700rpx;
    height: 68rpx;
    background-color: #f5f5f5;
    color: #999;
    border-radius: 50px;
}

.search .icon {
    margin-right: 10px;
    width: 14px;
    height: 14px;
    margin-bottom: -2px;
}

.content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 100rpx 100rpx 50rpx 100rpx;
    /* background-color: #f5f5f5; */
}