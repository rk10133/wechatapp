/* pages/book/components/single_book/index.wxss */
.container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
    margin-top: 50rpx;
}

.container .img {
    width: 100%;
    height: 100%;
    border-radius: 2px;
}

.container .detail {
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    width: 216rpx;
    background-color: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    border-bottom-left-radius: 2rpx;
    border-bottom-right-radius: 2rpx;
}

.detail .title,
.detail .author {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.detail .author {
    font-size: 20rpx;
    color: #999;
}

.detail .bottom {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    font-size: 20rpx;
}

.bottom .like {
    color: #666
}