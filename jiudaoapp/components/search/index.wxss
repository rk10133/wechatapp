/* components/search/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    background-color: #fff;
}

.head {
    position: fixed;
    display: flex;
    align-items: center;
    width: 750rpx;
    height: 100rpx;
    background-color: #fff;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    z-index: 99
}

.search-bar {
    display: inline-flex;
    align-items: center;
    margin-left: 20rpx;
    background-color: #f5f5f5;
    border-radius: 50px
}

.in-bar {
    color: #999
}

.input {
    display: inline-block;
    width: 500rpx;
    height: 60rpx;
    font-size: 27rpx;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
}

.icon {
    width: 14px;
    height: 14px;
}

.icon.search {
    margin-left: 12px;
    margin-right: 8px;
}

.icon.clear {
    margin-right: 10px;
}

.cancel {
    display: inline-block;
    line-height: 34px;
    width: 60px;
    text-align: center;
}

.search-type {
    display: flex;
    flex-direction: column;
    width: 690rpx;
    font-size: 14px;
    margin-top: 120rpx;
}

.history {
    margin-top: 30rpx;
}

.search-type .title {
    display: flex;
    align-items: center;
    color: #999;
    margin-bottom: 20rpx;
}

.search-type .icon {
    margin-right: 10rpx;
}

.search-type .list {
    display: flex;
    flex-wrap: wrap;
}

.search-type .list .item {
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.clear-btn {
    position: absolute;
    right: 25rpx;
}

.search-result {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 100rpx 100rpx 50rpx 100rpx;
}

.no-result {
    position: absolute;
    top: 50%;
    font-size: 26rpx;
    color: #999;
}

.loading-center {
    position: absolute;
    top: 50%;
}

.loading-bottom {
    margin-top: 10rpx;
    margin-bottom: 30rpx;
}